{
    // Workbench
    "files.autoSave": "afterDelay",
    "workbench.editorLargeFileConfirmation": 100,
    "workbench.editorAssociations": {
        "*.copilotmd": "vscode.markdown.preview.editor",
        "file:/**/*.parquet": "jupyter-data-wrangler"
    },
    // Icons
    "workbench.iconTheme": "material-icon-theme",
    // Theme
    "workbench.colorTheme": "GitHub Dark Default",
    // Editor
    "editor.fontFamily": "JetBrains Mono, monospace",
    "editor.minimap.enabled": false,
    "editor.fontLigatures": true,
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "all",
    "editor.renderLineHighlight": "all",
    "editor.bracketPairColorization.enabled": true,
    "editor.inlayHints.enabled": "on",
    "editor.inlayHints.fontFamily": "Fira Code",
    "editor.inlayHints.padding": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "smooth",
    "editor.smoothScrolling": true,
    "editor.parameterHints.enabled": true,
    "editor.guides.highlightActiveIndentation": "always",
    "editor.guides.indentation": true,
    "editor.guides.bracketPairs": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "always",
        "source.organizeImports": "always"
    },
    // Explorer
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    "explorer.sortOrder": "type",
    // Code Navigation
    "breadcrumbs.enabled": true,
    // Python
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.typeCheckingMode": "off",
    // Terminal
    "terminal.integrated.allowedLinkSchemes": [
        "file",
        "http",
        "https",
        "mailto",
        "vscode",
        "vscode-insiders",
        "docker-desktop"
    ],
    "terminal.integrated.fontFamily": "Fira Mono",
    "terminal.integrated.fontLigatures.enabled": true,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.defaultProfile.osx": "zsh",
    // Remote
    "remote.SSH.remotePlatform": {
        "joaompessoa": "linux",
        "192.168.0.217": "linux",
        "192.168.0.203": "macOS",
        "192.168.0.219": "linux",
        "macair": "macOS",
        "kdeserver": "linux",
        "redhat-server": "linux",
        "node-alma-1": "linux"
    },
    "remote.autoForwardPortsSource": "hybrid",
    "redhat.telemetry.enabled": false,
    // Jupyter Notebooks
    "notebook.output.textLineLimit": 20,
    "notebook.output.scrolling": false,
    "notebook.output.wordWrap": true,
    // Git
    "git.openRepositoryInParentFolders": "never",
    // Data Wrangler
    "dataWrangler.experiments.datatypes.pyspark": true,
    "dataWrangler.experiments.fastCsvParsing": true,
    "dataWrangler.startInEditModeForNotebookEntrypoints": true,
    // Kubernetes
    "vs-kubernetes": {
        "vscode-kubernetes.kubectl-path-linux": "/home/joaompessoa/.local/state/vs-kubernetes/tools/kubectl/kubectl",
        "vscode-kubernetes.minikube-path-linux": "/home/joaompessoa/.local/state/vs-kubernetes/tools/minikube/linux-amd64/minikube",
        "vscode-kubernetes.helm-path-linux": "/home/joaompessoa/.local/state/vs-kubernetes/tools/helm/linux-amd64/helm",
        "vscode-kubernetes.helm-path-mac": "/Users/joaoseverino/.vs-kubernetes/tools/helm/darwin-arm64/helm",
        "vscode-kubernetes.minikube-path-mac": "/Users/joaoseverino/.vs-kubernetes/tools/minikube/darwin-arm64/minikube"
    },
    // Copilot
    "github.copilot.chat.codesearch.enabled": true,
    "github.copilot.nextEditSuggestions.enabled": false,
    // // TODO Tree
    // "todo-tree.regex.regex": "(//|#|<!--|;|/\\*)\\s*(TODO|FIXME|BUG|HACK|NOTE)[: ]",
    // "todo-tree.general.tags": [
    //     "TODO",
    //     "FIXME",
    //     "BUG",
    //     "HACK",
    //     "NOTE"
    // ],
    // "todo-tree.tree.showScanModeButton": false,
    // Files
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/.git/**": true,
        "**/venv/**": true,
        "**/__pycache__/**": true
    },
}